  <script>
      $.post("/getadminauthsettings",{},function(admin){
          $(".adminUsername").val(admin['username']);
          $(".adminPassword").val(admin['password']);
        });
        $(".adminGroupSaveChanges").click(() => {
          $.post("/updateadminauthsettings",{username: $(".adminUsername").val(), password: $(".adminPassword").val()}, function(group){   
            $(".adminGroupSaveChanges").html("Changes Saved");
          });
        });
  </script>
